[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
max_line_length = 120

[*.py]
max_line_length = 79

[**/admin.py]
max_line_length = 120

[**/admin/*.py]
max_line_length = 120

[**/models.py]
max_line_length = 210

[**/models/*.py]
max_line_length = 210

[*.html]
max_line_length = 210

[Makefile]
indent_style = tab
